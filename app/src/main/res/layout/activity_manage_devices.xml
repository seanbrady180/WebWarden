<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColour"
    tools:context="com.example.seanb.webwarden.ManageDevices">

    <include
        android:id="@+id/include3"
        layout="@layout/content_manage_devices" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_anchor="@+id/include3"
        app:layout_anchorGravity="bottom|center">

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/homebutton" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profilebutton" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border3"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/acbutton" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_border4"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wabutton" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
