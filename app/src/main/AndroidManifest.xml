<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.seanb.webwarden">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/websiteaccess12"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenu"
            android:label="WebWarden"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AccessControl"
            android:label="@string/title_activity_access_control"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManageDevices"
            android:label="@string/title_activity_manage_devices"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignIn"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        >
        <activity
            android:name=".WebsiteAccess"
            android:label="@string/title_activity_website_access"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SiteControl"
            android:label="@string/title_activity_site_control"
            android:noHistory="true"
            android:theme="@style/AppTheme.CustomTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name=".MyService" />

        <activity
            android:name=".CreateAccount"
            android:label="@string/title_activity_create_account"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>